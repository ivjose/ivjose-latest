---
import { renderRichText, type ISbRichtext } from '@storyblok/js';

type Props = {
  titleTop: string;
  titleBottom: string;
  descriptions: ISbRichtext;
  btnText: string;
};

const { titleTop, titleBottom, descriptions, btnText } = Astro.props;
const renderedRichText = renderRichText(descriptions);
---

<section
  class="-mb-[84px] flex min-h-screen items-center justify-center bg-gray-100"
>
  <div class="px-6 py-24 sm:px-6 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl overflow-hidden text-center">
      <h2
        class="mt-10 text-4xl font-bold tracking-tight text-gray-900 lg:text-6xl"
      >
        <span class="-ml-8 block lg:-ml-16">{titleTop}</span>
        <span class="-mr-8 block lg:-mr-16">{titleBottom}</span>
      </h2>
      <div
        class="prose mt-6 text-gray-600 lg:prose-2xl lg:mt-8"
        set:html={renderedRichText}
      />

      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/contact"
          class="rounded-full bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 lg:px-8 lg:py-5 lg:text-2xl"
          >{btnText}</a
        >
      </div>
    </div>
  </div>
</section>
