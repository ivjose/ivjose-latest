---
import { Image } from 'astro:assets';
type Socials = {
  url: string;
  logo: any;
  title: string;
  tooltip: string;
};
interface Props {
  socials: Socials[];
}

const { socials } = Astro.props;

const skills = ['Resourceful', 'Talented', 'Awesome', 'Hardworking'];
---

<div class="px-4 text-center">
  <h2
    data-gsap="intro"
    class="invisible overflow-hidden text-center text-xl sm:text-2xl leading-8 sm:leading-10 tracking-widest opacity-0 will-change-transform lg:text-3xl"
  >
    <div class="block overflow-hidden lg:inline-block lg:overflow-visible">
      <div class="relative -mr-[100px] inline-block sm:-mr-[120px] lg:-mr-0">
        <div class="absolute -top-0 right-full w-full lg:-top-1">
          <ul class="animation list-none text-right text-rose-500">
            {
              skills.map((skill) => (
                <li class="m-0 font-custom font-semibold leading-8 sm:leading-10">
                  {skill}
                </li>
              ))
            }
          </ul>
        </div>
        &nbsp;<strong class="text-slate-700">front-end developer</strong>
      </div>
    </div>

    <div class="text-slate-700 lg:-mr-[120px] lg:inline-block lg:ml-2">
      from the <strong>Philippines</strong> ðŸ‡µðŸ‡­.
    </div>
  </h2>

  <div class="py-10">
    <div
      data-gsap="social"
      class="flex items-center justify-center space-x-6 opacity-0"
    >
      {
        socials.map((social) => (
          <a
            href={social.url}
            title={social.tooltip}
            class="grayscale transition delay-150 duration-300 ease-in-out hover:-translate-y-1  hover:grayscale-0 focus:grayscale-0"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span class="sr-only">{social.title}</span>
            <Image
              class="h-auto w-full"
              src={`${social.logo.filename}/m/50x50`}
              alt="Jose Santos IV"
              decoding="async"
              loading="lazy"
              width="50"
              height="50"
            />
          </a>
        ))
      }
    </div>
    <div data-gsap="arrow-wrap" class="flex justify-center py-8 opacity-0">
      <svg
        data-gsap="arrow"
        class="w-4 fill-black"
        viewBox="0 0 24 122"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M10.9393 121.061C11.5251 121.646 12.4749 121.646 13.0607 121.061L22.6066 111.515C23.1924 110.929 23.1924 109.979 22.6066 109.393C22.0208 108.808 21.0711 108.808 20.4853 109.393L12 117.879L3.51471 109.393C2.92893 108.808 1.97918 108.808 1.39339 109.393C0.807607 109.979 0.807607 110.929 1.39339 111.515L10.9393 121.061ZM10.5 -6.55671e-08L10.5 120L13.5 120L13.5 6.55671e-08L10.5 -6.55671e-08Z"
          fill="000000"></path>
      </svg>
    </div>
  </div>

  <style>
    [data-gsap='intro'],
    [data-gsap='social'],
    [data-gsap='arrow-wrap'] {
      /* clip-path: polygon(0 0, 100% 0, 100% 0, 0 0); */
      /* transition: all 1.5s; */
      /* transform: translateY(-2em); */
    }
    .animation {
      -webkit-animation-name: change;
      -webkit-animation-duration: 10s;
      -webkit-animation-iteration-count: infinite;
      animation-name: change;
      animation-duration: 10s;
      animation-iteration-count: infinite;
    }

    @-webkit-keyframes opacity {
      0%,
      100% {
        opacity: 0;
      }
      50% {
        opacity: 1;
      }
    }

    @-webkit-keyframes change {
      0%,
