---
import { useStoryblokApi } from '@storyblok/astro';
import { Image } from 'astro:assets';

const storyblokApi = useStoryblokApi();

const { data } = await storyblokApi.get('cdn/stories/config', {
  version: 'draft',

  resolve_links: 'url',
});
const headerContent = data?.story?.content;

const currentPath = new URL(Astro.request.url).pathname;

console.log(currentPath, 'SSSS');

const routes = [
  {
    url: '/',
    label: 'Home',
  },
  {
    url: '/contact',
    label: 'Say Hi!',
  },
];
---

<header class="relative z-10 bg-white">
  <div
    class="mx-auto flex max-w-2xl items-center justify-between p-6 md:space-x-10 lg:max-w-7xl lg:px-8"
  >
    <div class="flex justify-start lg:w-0 lg:flex-1">
      <a href="/">
        <span class="sr-only">Your Company</span>

        <Image
          class="h-12 w-12 lg:h-20 lg:w-20"
          src={`${headerContent?.headerLogo?.filename}/m/100x100`}
          alt={`IV Jose Santos`}
          width={100}
          height={100}
        />
      </a>
    </div>

    <nav class="space-x-2 md:flex md:space-x-10">
      {
        routes.map((route) => (
          <a
            href={route.url}
            class={`text-sm font-semibold text-gray-700 hover:text-gray-900 md:text-xl ${
              currentPath === route.url ? 'text-red-600 hover:text-red-700' : ''
            }`}
          >
            {route.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
